// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  projects      Project[]
  
  @@map("users")
}

model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  templates     Template[]
  datasets      Dataset[]
  fieldMappings FieldMapping[]
  exports       Export[]
  
  @@index([userId])
  @@map("projects")
}

model Template {
  id              String    @id @default(cuid())
  projectId       String
  name            String
  imageUrl        String
  imageWidth      Int
  imageHeight     Int
  fields          String      // JSON string: Array of field definitions with positions, styles, etc.
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fieldMappings   FieldMapping[]
  
  @@index([projectId])
  @@map("templates")
}

model Dataset {
  id          String    @id @default(cuid())
  projectId   String
  name        String
  fileType    String    // 'csv' | 'xlsx'
  rowCount    Int
  columns     String      // JSON string: Array of column names
  data        String      // JSON string: Actual data rows
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fieldMappings FieldMapping[]
  
  @@index([projectId])
  @@map("datasets")
}

model FieldMapping {
  id          String    @id @default(cuid())
  projectId   String
  templateId  String
  datasetId   String
  mappings    String    // JSON string: Object mapping template field IDs to dataset column names
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  template    Template  @relation(fields: [templateId], references: [id], onDelete: Cascade)
  dataset     Dataset   @relation(fields: [datasetId], references: [id], onDelete: Cascade)
  exports     Export[]
  
  @@unique([templateId, datasetId])
  @@index([projectId])
  @@index([templateId])
  @@index([datasetId])
  @@map("field_mappings")
}

model Export {
  id              String    @id @default(cuid())
  projectId       String
  fieldMappingId  String
  status          String    @default("pending") // 'pending' | 'processing' | 'completed' | 'failed'
  badgeCount      Int
  exportUrl       String?
  errorMessage    String?
  startedAt       DateTime  @default(now())
  completedAt     DateTime?
  
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fieldMapping    FieldMapping @relation(fields: [fieldMappingId], references: [id], onDelete: Cascade)
  
  @@index([projectId])
  @@index([fieldMappingId])
  @@map("exports")
}
