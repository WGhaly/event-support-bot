// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique  // 'super-admin', 'admin', 'user'
  displayName String
  description String?
  permissions String   @default("{}") // JSON string: Flexible permissions object
  users       User[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("roles")
}

model Module {
  id          String       @id @default(cuid())
  name        String       @unique  // 'badge-creation', 'attendee-management', etc.
  displayName String       // 'Badge Creation', 'Attendee Management'
  description String?
  icon        String?      // Icon identifier (lucide icon name)
  route       String       // '/dashboard/modules/badges'
  isActive    Boolean      @default(true)  // Global on/off
  order       Int          @default(0)     // Display order
  userModules UserModule[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  @@map("modules")
}

model UserModule {
  id        String   @id @default(cuid())
  userId    String
  moduleId  String
  isEnabled Boolean  @default(true)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  module    Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  
  @@unique([userId, moduleId])
  @@index([userId])
  @@index([moduleId])
  @@map("user_modules")
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  passwordHash  String
  name          String?
  roleId        String       @default("user")  // Foreign key to Role
  isActive      Boolean      @default(true)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  
  role          Role         @relation(fields: [roleId], references: [id])
  userModules   UserModule[]
  projects      Project[]
  events        Event[]
  
  @@index([roleId])
  @@map("users")
}

model Project {
  id          String    @id @default(cuid())
  name        String
  description String?
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  templates     Template[]
  datasets      Dataset[]
  fieldMappings FieldMapping[]
  exports       Export[]
  
  @@index([userId])
  @@map("projects")
}

model Template {
  id              String    @id @default(cuid())
  projectId       String
  name            String
  imageUrl        String
  imageWidth      Int
  imageHeight     Int
  fields          String      // JSON string: Array of field definitions with positions, styles, etc.
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fieldMappings   FieldMapping[]
  
  @@index([projectId])
  @@map("templates")
}

model Dataset {
  id          String    @id @default(cuid())
  projectId   String
  name        String
  fileType    String    // 'csv' | 'xlsx'
  rowCount    Int
  columns     String      // JSON string: Array of column names
  data        String      // JSON string: Actual data rows
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fieldMappings FieldMapping[]
  
  @@index([projectId])
  @@map("datasets")
}

model FieldMapping {
  id          String    @id @default(cuid())
  projectId   String
  templateId  String
  datasetId   String
  mappings    String    // JSON string: Object mapping template field IDs to dataset column names
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  template    Template  @relation(fields: [templateId], references: [id], onDelete: Cascade)
  dataset     Dataset   @relation(fields: [datasetId], references: [id], onDelete: Cascade)
  exports     Export[]
  
  @@unique([templateId, datasetId])
  @@index([projectId])
  @@index([templateId])
  @@index([datasetId])
  @@map("field_mappings")
}

model Export {
  id              String    @id @default(cuid())
  projectId       String
  fieldMappingId  String
  status          String    @default("pending") // 'pending' | 'processing' | 'completed' | 'failed'
  badgeCount      Int
  exportUrl       String?
  errorMessage    String?
  startedAt       DateTime  @default(now())
  completedAt     DateTime?
  
  project         Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  fieldMapping    FieldMapping @relation(fields: [fieldMappingId], references: [id], onDelete: Cascade)
  
  @@index([projectId])
  @@index([fieldMappingId])
  @@map("exports")
}

// Event Registration Module Models
model Event {
  id                String              @id @default(cuid())
  userId            String
  name              String
  slug              String              @unique // URL-friendly name for public registration
  description       String?             @db.Text
  logoUrl           String?
  startDate         DateTime?
  endDate           DateTime?
  location          String?
  maxAttendees      Int?
  isPublished       Boolean             @default(false)
  emailTemplate     String?             @db.Text // HTML email template
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  user              User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  formFields        FormField[]
  registrations     EventRegistration[]
  
  @@index([userId])
  @@index([slug])
  @@map("events")
}

model FormField {
  id            String   @id @default(cuid())
  eventId       String
  label         String
  fieldType     String   // 'email', 'phone', 'text', 'textarea', 'file', 'dropdown', 'checkbox', 'radio'
  placeholder   String?
  helpText      String?
  isRequired    Boolean  @default(false)
  options       String?  // JSON array for dropdown/checkbox/radio options
  validation    String?  // JSON object for validation rules
  order         Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  event         Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  
  @@index([eventId])
  @@map("form_fields")
}

model EventRegistration {
  id                String              @id @default(cuid())
  eventId           String
  email             String
  formData          String              @db.Text // JSON object with all form responses
  status            String              @default("pending") // 'pending', 'accepted', 'rejected'
  qrCode            String              @unique // Unique code for QR
  inviteSent        Boolean             @default(false)
  inviteSentAt      DateTime?
  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt
  
  event             Event               @relation(fields: [eventId], references: [id], onDelete: Cascade)
  attendance        EventAttendance[]
  
  @@index([eventId])
  @@index([email])
  @@index([qrCode])
  @@map("event_registrations")
}

model EventAttendance {
  id              String            @id @default(cuid())
  registrationId  String
  checkedInAt     DateTime          @default(now())
  checkedInBy     String?           // User ID who scanned the QR
  
  registration    EventRegistration @relation(fields: [registrationId], references: [id], onDelete: Cascade)
  
  @@index([registrationId])
  @@map("event_attendance")
}
